{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('images/{{background }}')">{{title}}</section>
<h2>{{title}}disponíveis para adoção</h2>
{{/banner}}


<div class="container list">
{{#list}}<!-- Utilizando e manipulando os elemntso que estão em pet -->

      <div class="item">
        <img src="images/{{image}}" class="item--image" />
        <div class="item--name">{{name}}</div>
        <div class="item--color">Cor: {{color}}</div>
        <div class="item--genre">Gênero: {{sex}}</div>
    </div>
 
{{/list}}
</div>    
{{^list}}
 <div class="container no-list">
 <h2>Não há animais disponiveis nestas condições. </h2>
 </div>
{{/list}} <!--  fazendo a verificação para quando o list nao exist, no caso para quando não existir o nome do animal digitado -->


{{>partials/footer}}